{
  "name": "vue-litewind",
  "version": "0.0.37",
  "type": "module",
  "main": "./dist/vue-litewind.umd.cjs",
  "module": "./dist/vue-litewind.js",
  "files": [
    "dist",
    "src/styles/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/vue-litewind.js",
      "export": "./dist/vue-litewind.umd.cjs"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./vue-litewind.css": {
      "import": "./src/styles/vue-litewind.css",
      "require": "./src/styles/vue-litewind.css"
    },
    "./components/*.css": {
      "import": "./src/styles/components/*.css",
      "require": "./src/styles/components/*.css"
    }
  },
  "scripts": {
    "dev": "vite --config vite-docs.config.js",
    "test": "vitest --config vite-lib.config.js --reporter verbose",
    "build-docs": "vite build --config vite-docs.config.js",
    "build-lib": "vite build --config vite-lib.config.js",
    "update-docs": "cd src/documentation/scripts && node ./get-components-reference.js && node ./get-docs.js",
    "serve": "vite preview --config vite-docs.config.js dist-docs"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.2.4",
    "@popperjs/core": "^2.11.6",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@testing-library/vue": "^6.6.1",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/compiler-sfc": "^3.2.37",
    "autoprefixer": "^10.4.8",
    "chalk": "^5.2.0",
    "fast-glob": "^3.2.12",
    "happy-dom": "^8.2.2",
    "highlight.js": "^11.6.0",
    "jsdom": "^21.1.0",
    "lodash": "^4.17.21",
    "pinia": "^2.1.4",
    "postcss": "^8.4.16",
    "postcss-nested": "^5.0.6",
    "tailwindcss": "^3.3.1",
    "vite": "^3.0.8",
    "vitest": "^0.28.3",
    "vue": "^3.2.37",
    "vue-router": "^4.1.3"
  }
}
